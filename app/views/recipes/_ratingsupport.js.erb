$('#star').raty({
  readOnly: true,
  score: <%= @recipe.average_rating %>,
  path: '/assets'
});

$('#user_star').raty({
  score: <%= @rating ? @rating.score : 0 %>,
  path: '/assets',
  click: function(score, evt) {
    $.ajax({
      url: '/ratings/' + <%=  @rating ? @rating.id : -1 %>,
      type: 'PATCH',
      data: { score: score, recipe_id: <%= @recipe.id %> }
    });
  }
});