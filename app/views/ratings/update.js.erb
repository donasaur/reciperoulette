$('#star').raty({
  readOnly: true,
  score: <%= Recipe.find(@recipe_id).average_rating %>,
  path: '/assets'
});

$('#user_star').raty({
  score: <%= @rating.score %>,
  path: '/assets',
  click: function(score, evt) {
    $.ajax({
      url: '/ratings/' + <%= @rating.id %>,
      type: 'PATCH',
      data: { score: score, recipe_id: <%= @recipe_id %> }
    }).done(function (data){});
  }
});