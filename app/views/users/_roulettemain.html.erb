<div class="outer-roulette contain-center">

  <div id="block-button">
    <button class="btn" type="button">Block</button>
  </div>

  <div id="skip-button">
    <button label="skip" class="btn" type="button">Skip</button>
  </div>

  <div class="row" id="row1">
  
    <div class="roulette contain-center" style = "background-color:<%=progress_bar_percentage(@recipe)%>"=>
      <div id="recipe-name">
        <%= @recipe.name %>
      </div>

      <div id="roulette-picture">
        <% #Change "#{@recipe.name}.jpg" to "#{@recipe.img_url}" to support Imgur hosting %>
        <%= link_to (image_tag @recipe.image.url(:medium)), recipe_path(@recipe), :title => "View #{@recipe.name} recipe" %> 
      </div>
      
  </div> <!-- end of roulette -->

  </div> <!-- end of row1 -->

  <br>
  <div class="row contain-center legend">
    <%= render 'roulettelegend' %>
  </div>

</div>